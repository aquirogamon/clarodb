.row.margin-top-25
  .col-md-1
  .col-md-10
    .logotitle
    %h2.page_title
      Sistema Ágil de Gestión y Provisionamiento
    %h4.page_subtitle.margin-top-10
      Reportes ejecutivos del SAM - Reporte de Estadistica de utilización de Interface de Acceso
  .col-md-1
%hr

.row
  .col-md-2
  .col-md-8
    %h3
      Porcentaje de Utilización de Interface de equipo SAR-7705
  .col-md-2

.row.margin-top-10
  .col-md-2
  .col-md-8
    .float-left 
      = link_to 'Volver', samqosdiscards_samutilizationaccesointerfaces_path, class: 'btn btn-success'
    .updated
      Actualizado
      = @samutilizationaccesointerface.created_at.strftime("%d/%m/%Y %H:%M:%S")
  .col-md-2

.row.margin-top-00
  .col-md-1
  .col-md-8.table-responsive
    %table.table.table-striped.table-bordered.table-condensed.text-center.margin-top-10
      %thead
        %tr
          %th.text-center
            Nodo
          %th.text-center
            Puerto
          %th.text-center
            Descripción del Puerto
          %th.text-center
            Capacidad del enlace (Mbps)
          %th.text-center
            Tipo de Puerto
          %th.text-center
            Download (Mbps)
          %th.text-center
            Upload (Mbps)
          %th.text-center
            Utilización del enlace (%)
      %tbody
        - unless Samutilizationaccesointerface.last == nil
          - @table_utilizationaccesointerface_show.map do |item|
            %tr
              %td
                = item[:node]
              %td
                = item[:port]
              %td
                = item[:description]
              %td
                = item[:velodidad]
              %td
                = item[:speed]
              %td
                = item[:Mbps_bwrx]
              %td
                = item[:Mbps_bwtx]
              %td
                = item[:status]
.col-md-2