.row.margin-top-25
  .col-md-1
  .col-md-10
    .logotitle
    %h2.page_title
      Sistema Ágil de Gestión y Provisionamiento
    %h4.page_subtitle.margin-top-10
      Reportes ejecutivos de KPIs - Reporte Interfaces de Servicio de Internet de Clientes Corporativos
  .col-md-1

.row
  .col-md-2
  .col-md-8
    %h3
      Porcentaje de Utilización del Servicios de Internet
  .col-md-2

.row.margin-top-10
  .col-md-2
  .col-md-8
    .float-left 
      = link_to 'Volver', ppmreports_ppminterfaceclientinternets_path, class: 'btn btn-success'
    .updated
      Actualizado
      = @ppminterfaceclientinternet.created_at.strftime("%d/%m/%Y %H:%M:%S")
  .col-md-2

.row.margin-top-00
  .col-md-12.table-responsive
    %table.table.table-striped.table-bordered.table-condensed.text-center.margin-top-10
      %thead
        %tr
          %th.text-center
            \#
          %th.text-center
            Cliente
          %th.text-center
            CID
          %th.text-center
            Capacidad (Mbps)
          %th.text-center
            Max Mbps Tx
          %th.text-center
            Max Mbps Rx
          %th.text-center
            Utilización %
          %th.text-center
            Utilización_P90 %
      %tbody
        - unless Ppminterfaceclientinternet.last == nil
          - i = 0
          - @ppminterfaceclientinternet[:ppminterfaceclientinternets_array].map do |item|
            - i += 1
            %tr
              %td
                = i
              %td
                = item[:clientmax]
              %td
                = item[:cidmax]
              %td
                = item[:egressRatemax]
              %td
                = item[:bps_txmax]
              %td
                = item[:bps_rxmax]
              - if item[:status] > 80
                %td.danger
                  = item[:status]
              - else
                %td
                  = item[:status]
              - if item[:status_per] > 80.00
                %td.danger
                  = item[:status_per]
              - else
                %td
                  = item[:status_per]