.form-group
= form_for @access_internet do |f|
  - if @access_internet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@access_internet.errors.count, "error")} prohibited this access_internet from being saved:"
      %ul
        - @access_internet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :"HFC CGN", class: 'margin-top-10'
    = f.text_field :hfc_cgn, class: 'form-control'
  .field
    = f.label :"HFC Público", class: 'margin-top-10'
    = f.text_field :hfc_public, class: 'form-control'
  .field
    = f.label :"HFC IPv6", class: 'margin-top-10'
    = f.text_field :hfc_ipv6, class: 'form-control'
  .field
    = f.label :"Móvil CGN", class: 'margin-top-10'
    = f.text_field :mobile_cgn, class: 'form-control'
  .field
    = f.label :"Móvil Corporativo", class: 'margin-top-10'
    = f.text_field :mobile_corporate, class: 'form-control'
  .field
    = f.label :"Móvil IPv6", class: 'margin-top-10'
    = f.text_field :mobile_ipv6, class: 'form-control'
  .field
    = f.label :"Total Olo", class: 'margin-top-10'
    = f.text_field :mobile_olo, class: 'form-control'
  .field
    = f.label :"Corporativo (FO - WIMAX)", class: 'margin-top-10'
    = f.text_field :corporate, class: 'form-control'
  .field
    = f.label :"Caché IN", class: 'margin-top-10'
    = f.text_field :cache_in, class: 'form-control'
  .actions
    = f.submit 'Guardar', class: 'btn btn-sm btn-warning margin-top-20'
