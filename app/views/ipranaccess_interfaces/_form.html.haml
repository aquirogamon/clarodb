.form-group
= form_for @ipranaccess_interface do |f|
  - if @ipranaccess_interface.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ipranaccess_interface.errors.count, "error")} prohibited this ipranaccess_interface from being saved:"
      %ul
        - @ipranaccess_interface.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :"Device + Index (No Modificar)", class: 'margin-top-10'
    = f.text_field :deviceindex, class: 'form-control'
  .field
    = f.label :"Pico de Tráfico", class: 'margin-top-10'
    = f.text_field :bps_max, class: 'form-control'
  .field
    = f.label :"% Utilización", class: 'margin-top-10'
    = f.text_field :status, class: 'form-control'
  .field
    = f.label :Capacidad, class: 'margin-top-10'
    = f.text_field :egressRate, class: 'form-control'
  .field
    = f.label :crecimiento, class: 'margin-top-10'
    = f.text_field :crecimiento, class: 'form-control'
  .field
    = f.label :"Fecha de Solución", class: 'margin-top-10'
    = f.date_field :time, class: 'form-control'
  .field
    = f.label :Comentario, class: 'margin-top-10'
    = f.text_area :comment, class: 'form-control'
  .actions
    = f.submit 'Guardar', class: 'btn btn-sm btn-warning margin-top-05'
