.row.margin-top-25
  .col-md-1
  .col-md-10
    .logotitle
    %h2.page_title
      Sistema Ágil de Gestión y Provisionamiento
    %h4.page_subtitle.margin-top-10
      Reportes ejecutivos del SAM - Reporte de Cantidad de alarmas OSPF
  .col-md-1
%hr

.row
  .col-md-2
  .col-md-8
    %h3
      Alarmas OSPF
  .col-md-2

.row.margin-top-10
  .col-md-2
  .col-md-8
    .float-left 
      = link_to 'Volver', samreportalarmas_samospfalarmas_path, class: 'btn btn-success'
    .updated
      Actualizado
      = @samospfalarma.created_at.strftime("%d/%m/%Y %H:%M:%S")
  .col-md-2

.row.margin-top-00
  .col-md-2
  .col-md-8.table-responsive
    = will_paginate @table_ospfalarma_show
    %table.table.table-striped.table-bordered.table-condensed.text-center.margin-top-10
      %thead
        %tr
          %th.text-center
            Item
          %th.text-center
            Nodo
          %th.text-center
            Tipo de Alarma
          %th.text-center
            Nombre de la Alarma
          %th.text-center
            Objeto afectado
          %th.text-center
            Probable causa
          %th.text-center
            Primera Fecha que se Detectó
          %th.text-center
            Última Fecha que se Detectó
          %th.text-center
            \# de Ocurrencia
      %tbody
        - unless Samospfalarma.last == nil
          - i = 0
          - @table_ospfalarma_show.map do |item|
            - i += 1
            %tr
              %td
                = i
              %td
                = item[:nodeName]
              %td
                = item[:affectedObjectClassName]
              %td
                = item[:alarmClassTag]
              %td
                = item[:affectedObjectDisplayedName]
              %td
                = item[:probableCause]
              %td
                = item[:timefirts]
              %td
                = item[:timelast]
              %td
                = item[:numberOfOccurences]
.col-md-2