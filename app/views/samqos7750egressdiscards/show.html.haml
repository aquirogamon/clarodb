.row.margin-top-25
  .col-md-1
  .col-md-10
    .logotitle
    %h2.page_title
      Sistema Ágil de Gestión y Provisionamiento
    %h4.page_subtitle.margin-top-10
      Reportes ejecutivos del SAM - Reporte de Paquetes descartados en QoS
  .col-md-1
%hr

.row
  .col-md-2
  .col-md-8
    %h3
      Paquetes descartados por cola de QoS - SR-7750 - SAP Egress
  .col-md-2

.row.margin-top-10
  .col-md-2
  .col-md-8
    .float-left 
      = link_to 'Volver', samqosreports_samqos7750egressdiscards_path, class: 'btn btn-success'
    .updated
      Actualizado
      = @samqos7750egressdiscard.created_at.strftime("%d/%m/%Y %H:%M:%S")
  .col-md-2

.row.margin-top-00
  .col-md-2
  .col-md-8.table-responsive
    %table.table.table-striped.table-bordered.table-condensed.text-center.margin-top-10
      %thead
        %tr
          %th.text-center
            Item
          %th.text-center
            Nodo
          %th.text-center
            Servicio
          %th.text-center
            Puerto
          %th.text-center
            Descripción del Puerto
          %th.text-center
            Cola de QoS
          %th.text-center
            Paquetes descartados
          %th.text-center
            Tiempo
      %tbody
        - unless Samqos7750egressdiscard.last == nil
          - i = 0
          - @samqos7750egressdiscard[:samqos7750egressdiscards_array].map do |item|
            - i += 1
            %tr
              %td
                = i
              %td
                = item[:node]
              %td
                = item[:service]
              %td
                = item[:sap]
              %td
                = item[:queueId]
              %td
                = item[:discard]
              %td
                = item[:timeCaptured]
.col-md-2